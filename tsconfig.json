{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@components/*": ["src/components/*"],
      "@libs/*": ["src/libs/*"],
      "@themes/*": ["src/themes/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["assets/*"],
      "@config": ["config"],
      "@components": ["src/components"],
      "@libs": ["src/libs"],
      "@themes": ["src/themes"],
      "@styles": ["src/styles"],
      "@assets": ["assets"]
    }
  },
  "include": ["src/**/*", "config"],
  "exclude": ["node_modules"]
}
